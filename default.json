{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchSourceUrls": ["https://github.com/viptv-work/viptv"],
      "groupName": "viptv monorepo",
      "matchUpdateTypes": ["digest", "patch", "minor", "major"],
      "matchCurrentValue": "/^2\\.\\d+\\.\\d+(?:(?:beta|rc)-\\d+)?$/"
    }
  ]
}
